% contract-style.sty
% Custom LaTeX style package for Heavenly Roofing LLC contract
% Provides professional legal document formatting and custom commands

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{contract-style}[2026/02/27 v1.0 Contract Style Package]

% ============================================================================
% REQUIRED PACKAGES
% ============================================================================

\RequirePackage[letterpaper, margin=1in]{geometry}  % 1-inch margins
\RequirePackage{setspace}                           % Line spacing control
\RequirePackage{parskip}                            % Paragraph spacing
\RequirePackage{fancyhdr}                           % Headers and footers
\RequirePackage{titlesec}                           % Section formatting
\RequirePackage{enumitem}                           % List formatting
\RequirePackage{tabularx}                           % Flexible tables
\RequirePackage{array}                              % Enhanced tables
\RequirePackage{xcolor}                             % Color support
\RequirePackage{microtype}                          % Typography improvements
\RequirePackage{lastpage}                           % Last page reference
\RequirePackage{hyperref}                           % PDF metadata

% ============================================================================
% COLOR DEFINITIONS
% ============================================================================

\definecolor{PlaceholderRed}{RGB}{220,20,60}        % Crimson for placeholders
\definecolor{HeadingBlue}{RGB}{25,25,112}           % Midnight blue for headings
\definecolor{FooterGray}{RGB}{64,64,64}             % Dark gray for footer

% ============================================================================
% TYPOGRAPHY AND SPACING
% ============================================================================

% Line spacing: 1.5 for readability in legal documents
\setstretch{1.5}

% Paragraph spacing instead of indentation
\setlength{\parindent}{0pt}
\setlength{\parskip}{6pt plus 2pt minus 1pt}

% ============================================================================
% PAGE LAYOUT
% ============================================================================

% Configure fancy headers and footers
\pagestyle{fancy}
\fancyhf{}  % Clear all headers and footers

% Header: Document title (left) and section (right)
\fancyhead[L]{\small\textsc{Independent Contractor Agreement}}
\fancyhead[R]{\small\textsc{Heavenly Roofing LLC}}

% Footer: Page numbers (center)
\fancyfoot[C]{\color{FooterGray}\small Page \thepage\ of \pageref{LastPage}}

% Line below header
\renewcommand{\headrulewidth}{0.4pt}
\renewcommand{\footrulewidth}{0pt}

% Style for first page (no header)
\fancypagestyle{firstpage}{
    \fancyhf{}
    \renewcommand{\headrulewidth}{0pt}
    \fancyfoot[C]{\color{FooterGray}\small Page \thepage\ of \pageref{LastPage}}
}

% ============================================================================
% SECTION FORMATTING
% ============================================================================

% Article sections: Legal-style numbering (1, 2, 3...)
\titleformat{\section}
    {\normalfont\large\bfseries\color{HeadingBlue}}  % Format
    {SECTION \thesection:}                            % Label
    {0.5em}                                           % Sep
    {\MakeUppercase}                                  % Before code

\titlespacing*{\section}{0pt}{18pt plus 4pt minus 2pt}{8pt plus 2pt minus 2pt}

% Subsections: Legal-style numbering (1.1, 1.2, 1.3...)
\titleformat{\subsection}
    {\normalfont\normalsize\bfseries}                 % Format
    {\thesubsection}                                  % Label
    {0.5em}                                           % Sep
    {}                                                % Before code

\titlespacing*{\subsection}{0pt}{12pt plus 3pt minus 2pt}{6pt plus 2pt minus 1pt}

% Subsubsections: Legal-style numbering (1.1.1, 1.1.2...)
\titleformat{\subsubsection}
    {\normalfont\normalsize\itshape}                  % Format
    {\thesubsubsection}                               % Label
    {0.5em}                                           % Sep
    {}                                                % Before code

\titlespacing*{\subsubsection}{0pt}{10pt plus 2pt minus 1pt}{4pt plus 1pt minus 1pt}

% ============================================================================
% LIST FORMATTING
% ============================================================================

% Enumerate: legal-style (a), (b), (c)...
\setlist[enumerate,1]{label=(\alph*), leftmargin=*, itemsep=4pt, parsep=2pt}
\setlist[enumerate,2]{label=(\roman*), leftmargin=*, itemsep=3pt, parsep=1pt}

% Itemize: professional bullets
\setlist[itemize,1]{label=$\bullet$, leftmargin=*, itemsep=4pt, parsep=2pt}
\setlist[itemize,2]{label=$\circ$, leftmargin=*, itemsep=3pt, parsep=1pt}

% ============================================================================
% HYPERREF CONFIGURATION
% ============================================================================

\hypersetup{
    colorlinks=false,          % No colored links (for print)
    pdfborder={0 0 0},         % No border around links
    pdftitle={Independent Contractor Agreement - Heavenly Roofing LLC},
    pdfauthor={Heavenly Roofing LLC},
    pdfsubject={Insurance Supplement Specialist Services Agreement},
    pdfkeywords={contract, roofing, insurance, supplement},
    pdfcreator={LaTeX with contract-style package},
    pdfproducer={pdfLaTeX}
}

% ============================================================================
% CUSTOM COMMANDS
% ============================================================================

% Placeholder text (red and bold for visibility)
\newcommand{\placeholder}[1]{%
    {\color{PlaceholderRed}\textbf{[#1]}}%
}

% Money threshold formatting
\newcommand{\moneythreshold}[1]{%
    \textbf{\$#1}%
}

% Percentage formatting
\newcommand{\percentage}[1]{%
    \textbf{#1\%}%
}

% Signature line (with label above)
\newcommand{\signatureline}[2][3in]{%
    \parbox{#1}{%
        \rule{#1}{0.4pt}\\[2pt]%
        \small #2%
    }%
}

% Date line
\newcommand{\dateline}[1][2in]{%
    \parbox{#1}{%
        \rule{#1}{0.4pt}\\[2pt]%
        \small Date%
    }%
}

% Party definition command (for consistency)
\newcommand{\party}[2]{%
    \textbf{#1} (#2)%
}

% Defined term (for legal defined terms - capitalize and bold)
\newcommand{\defterm}[1]{%
    \textbf{``#1''}%
}

% Section reference
\newcommand{\secref}[1]{%
    Section~\ref{#1}%
}

% Contract title formatting
\newcommand{\contracttitle}[1]{%
    \begin{center}
        \Large\bfseries\MakeUppercase{#1}
    \end{center}
    \vspace{12pt}
}

% Contract subtitle formatting
\newcommand{\contractsubtitle}[1]{%
    \begin{center}
        \large\bfseries{#1}
    \end{center}
    \vspace{18pt}
}

% Effective date
\newcommand{\effectivedate}{%
    \begin{center}
        \textbf{Effective Date:} \placeholder{FILL IN DATE}
    \end{center}
    \vspace{18pt}
}

% WHEREAS clause formatting
\newcommand{\whereas}[1]{%
    \textbf{WHEREAS}, #1; and%
}

% NOW THEREFORE clause
\newcommand{\nowthereforee}{%
    \textbf{NOW, THEREFORE}, in consideration of the mutual covenants and agreements
    contained herein, and for other good and valuable consideration, the receipt and
    sufficiency of which are hereby acknowledged, the parties agree as follows:%
}

% Notary seal placeholder box
\newcommand{\notaryseal}{%
    \begin{tabular}{|c|}
        \hline
        \\[0.8in]
        \textbf{[NOTARY SEAL]}\\
        \\[0.2in]
        \hline
    \end{tabular}%
}

% ============================================================================
% TABLE FORMATTING
% ============================================================================

% Enhanced table column types
\newcolumntype{L}[1]{>{\raggedright\arraybackslash}p{#1}}
\newcolumntype{C}[1]{>{\centering\arraybackslash}p{#1}}
\newcolumntype{R}[1]{>{\raggedleft\arraybackslash}p{#1}}

